{
  "manifest_version": 2,
  "name": "Official Game News",
  "version": "0.0.1",
  "description": "Stay up to date with the news/patch notes of your favorite games.",
  "default_locale": "en",
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "browser_action": {
    "default_title": "Esports News",
    "default_popup": "index.html",
    "default_icon": {
      "48": "icons/logo-48.png",
      "72": "icons/logo-72.png",
      "128": "icons/logo-128.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_page": "options.html",
  "icons": {
    "48": "icons/logo-48.png",
    "72": "icons/logo-72.png",
    "128": "icons/logo-128.png"
  },
  "permissions": [
    "storage"
  ]
}